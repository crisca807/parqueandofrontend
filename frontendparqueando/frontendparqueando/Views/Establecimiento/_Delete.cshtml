@model WebApplicationParqueando.Models.DTO.EstablecimientoDTO

<h2>Eliminar Establecimiento</h2>

<h3>¿Estás seguro de que quieres eliminar este establecimiento?</h3>
<div>
    <h4>ID: @Model.IDEstablecimiento</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.NombreEstablecimiento</dd>
        <dt class="col-sm-2">Capacidad</dt>
        <dd class="col-sm-10">@Model.Capacidad</dd>
        <dt class="col-sm-2">Tarifa</dt>
        <dd class="col-sm-10">@Model.Tarifa</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="IDEstablecimiento" />
    <div class="form-group">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </div>
</form>

<p>
    <a asp-action="Index">Volver a la lista de establecimientos</a>
</p>
