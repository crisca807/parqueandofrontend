@model WebApplicationParqueando.Models.DTO.ComentarioDTO

<h1>Editar Comentario</h1>

<div>
    <form asp-action="Edit" asp-route-id="@Model.IDcomentario" method="post">
        <div class="form-group">
            <label asp-for="ComentarioTexto" class="control-label"></label>
            <input asp-for="ComentarioTexto" class="form-control" />
            <span asp-validation-for="ComentarioTexto" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IDusuario" class="control-label"></label>
            <input asp-for="IDusuario" class="form-control" />
            <span asp-validation-for="IDusuario" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IDEstablecimiento" class="control-label"></label>
            <input asp-for="IDEstablecimiento" class="form-control" />
            <span asp-validation-for="IDEstablecimiento" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Guardar cambios" class="btn btn-primary" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Volver a la Lista</a>
</div>
