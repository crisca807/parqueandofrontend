@model WebApplicationParqueando.Models.DTO.UsuarioDTO

<h2>Eliminar Usuario</h2>

<h3>¿Estás seguro de que quieres eliminar este usuario?</h3>
<div>
    <h4>ID: @Model.IDUsuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>
        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>
        <dt class="col-sm-2">Correo Electrónico</dt>
        <dd class="col-sm-10">@Model.CorreoElectronico</dd>
        <!-- Agrega más propiedades según sea necesario -->
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="IDUsuario" />
    <div class="form-group">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </div>
</form>

<p>
    <a asp-action="Index">Volver a la lista de usuarios</a>
</p>
